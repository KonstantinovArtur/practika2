<Window x:Class="Practika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practika"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
       
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="HouseGrid" Grid.Row="1" Grid.RowSpan="4" SelectionChanged="HouseGrid_SelectionChanged"/>
        <TextBox x:Name="Txt" Grid.Row="5"/>
        <Button Content="Переход на другую таблицу" Grid.Row="0" Click="Button_Click_3" />
        <Button Content="Удаление" Grid.Row="7" Click="Button_Click_1"/>
        <Button Content="Добавление" Grid.Row="6" Click="Button_Click"/>
        <Button Content="Изменение" Grid.Row="8" Click="Button_Click_2" />


    </Grid>
</Window>
